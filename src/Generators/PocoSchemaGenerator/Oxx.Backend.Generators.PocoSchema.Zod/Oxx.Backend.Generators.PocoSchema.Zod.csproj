<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" PrivateAssets="all" ExcludeAssets="Runtime" />
  </ItemGroup>

  <PropertyGroup>
    <Version>0.1.0.41</Version>
    <IsPackable>true</IsPackable>
    <Title>Oxx.Backend.Generators.PocoSchema.Zod</Title>
    <Authors>Kenneth Hoff</Authors>
    <Description>Generated Zod schemas out of your C# Models</Description>
    <PackageTags>Zod TypeScript Generator TypeSafety CompileTime SourceGenerator</PackageTags>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  
  <ItemGroup>
    <Content Include="build\Oxx.Backend.Generators.PocoSchema.Zod.props">
      <PackagePath>build\</PackagePath>
    </Content>
    <Content Include="build\Oxx.Backend.Generators.PocoSchema.Zod.targets">
      <PackagePath>build\</PackagePath>
    </Content>
  </ItemGroup>

</Project>
