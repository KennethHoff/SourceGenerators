<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!--defining properties interesting for my task-->
  <PropertyGroup>
    <!--The folder where the custom task will be present. It points to inside the nuget package. -->
    <_TaskFolder>$(MSBuildThisFileDirectory)..\lib\netstandard2.0</_TaskFolder>
    <!--Reference to the assembly which contains the MSBuild Task-->
    <CustomTasksAssembly>$(_TaskFolder)\Oxx.Backend.Generators.PocoSchema.Zod.dll</CustomTasksAssembly>
  </PropertyGroup>
  
  <UsingTask TaskName="ZodSchemaGeneratorTask" AssemblyFile="$(CustomTasksAssembly)" />
</Project>